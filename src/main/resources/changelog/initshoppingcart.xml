<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.18.xsd">

    <changeSet id="createShoppingCartTable" author="miss_sherlock_holmes">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="shopping_cart"/>
            </not>
        </preConditions>
        <createTable tableName="shopping_cart">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_shopping_cart_user" references="user(id)"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_shopping_cart_product" references="product(id)"/>
            </column>
            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="booking_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="ordered_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="booked_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="max_quantity" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="remaining_quantity" type="INT">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>